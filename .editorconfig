# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.sh,docker-compose.yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Dockerfile-*,*.env}]
indent_size = 2
insert_final_newline = false
